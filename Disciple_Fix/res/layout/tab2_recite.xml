<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/lyt_jindo"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#ffffff"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.1" >

            </FrameLayout>

            <TextView
                android:id="@+id/tv_semester"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.1" >

            </FrameLayout>

        </LinearLayout>
        
        <ListView
            android:id="@+id/wordsListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true" >
        </ListView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lyt_contents"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/contents_bgd"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/content1"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:orientation="vertical" >

            <FrameLayout
                android:id="@+id/layHead1"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_margin="0px"
                android:layout_weight="0.6"
                android:padding="0px" >
            </FrameLayout>

            <LinearLayout
                android:id="@+id/layContent1"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1.4"
                android:orientation="vertical" >


                <TextView
                    android:id="@+id/tv_1content"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/hello_world"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <FrameLayout
                android:id="@+id/layMiddle1"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_margin="0px"
                android:layout_weight="0.5"
                android:padding="0px" >
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/word1"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1.3"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/show1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >

                <FrameLayout
                    android:id="@+id/layWordLeft1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5" >
                </FrameLayout>

                <LinearLayout
                    android:id="@+id/layWordJari1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="8"
                    android:orientation="vertical" >



                    <TextView
                        android:id="@+id/tv_1word"
                        android:layout_width="wrap_content"
                        android:layout_height="110dp"
                        android:layout_weight="80"
                        android:gravity="left"
                        android:scrollbars="vertical"
                        android:text="@string/malthmjari"
                        android:textSize="16sp" />

                </LinearLayout>

                <FrameLayout
                    android:id="@+id/layWordRight1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5" >
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/content2"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:orientation="vertical" >

            <FrameLayout
                android:id="@+id/layHead2"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_margin="0px"
                android:layout_weight="0.5"
                android:padding="0px" >
            </FrameLayout>

            <LinearLayout
                android:id="@+id/layContent2"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1.3"
                android:orientation="vertical" >


                <TextView
                    android:id="@+id/tv_2content"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/hello_world"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <FrameLayout
                android:id="@+id/layMiddle2"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_margin="0px"
                android:layout_weight="0.5"
                android:padding="0px" >
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/word2"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1.4"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/layWord2"
                android:layout_width="fill_parent"
                android:layout_height="110dp" >

                <FrameLayout
                    android:id="@+id/layWordLeft2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5" >
                </FrameLayout>

                <LinearLayout
                    android:id="@+id/layWordJari2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="8"
                    android:orientation="vertical" >



                    <TextView
                        android:id="@+id/tv_2word"
                        android:layout_width="wrap_content"
                        android:layout_height="110dp"
                        android:layout_weight="80"
                        android:gravity="left"
                        android:scrollbars="vertical"
                        android:text="@string/malthmjari"
                        android:textSize="16sp" />

                </LinearLayout>

                <FrameLayout
                    android:id="@+id/layWordRight2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5" >
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/book"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.35"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/layBook3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5" >

                <FrameLayout
                    android:id="@+id/layWordLeft3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5" >
                </FrameLayout>

                <LinearLayout
                    android:id="@+id/LayBookJari"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="8"
                    android:orientation="vertical" >



                    <TextView
                        android:id="@+id/tv_3book"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="8"
                        android:gravity="left"
                        android:scrollbars="vertical"
                        android:text="@string/malthmjari"
                        android:textSize="14sp" />

                </LinearLayout>

                <FrameLayout
                    android:id="@+id/LayWordRight3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5" >
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</AbsoluteLayout>